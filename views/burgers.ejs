<div class="container">
  <div class="col-12 text-center mt-5">
    <img class="img-fluid" style="height:200px;" src="/img/burger.png">
    <h1 class="my-3">Eat Da Burger!</h1>
  </div>

  <div class="col-12 mt-5">
    <div class="row">
      <div class="col-6">
        <div class="card card-body"> 
          <h5 class="card-title">Burgers</h5>
          <ul class="list-group">
          <% burgers.map((burger) => { %>
            <% if(!burger.devoured) { %>
              <li class="list-group-item" data-id="<%= burger.id %>">
                <%= burger.name %>
                <button class="float-right btn btn-secondary devour-btn" data-id="<%= burger.id %>">Devour it</button>
              </li>
            <% } %>
          <% }) %>
          </ul>
        </div>
      </div>
      <div class="col-6">
        <div class="card card-body">
          <h5 class="card-title">Devoured</h5>
          <ul class="list-group">
            <% burgers.map((burger) => { %>
              <% if(burger.devoured) { %>
                <li class="list-group-item" data-id="<%= burger.id %>">
                  <%= burger.name %>
                </li>
              <% } %>
            <% }) %>
            </ul>
        </div>
      </div>
    </div>    
  </div> <!-- End of Burger lists Col -->  

  <div class="col-12 mt-4">
    <div class="input-group mb-3">
      <input type="text" class="form-control" placeholder="Enter a burger name" id="burger-input">
      <div class="input-group-append">
        <button class="btn btn-outline-secondary add-burger-btn" type="button">Add Burger</button>
      </div>
    </div>
  </div>

</div>